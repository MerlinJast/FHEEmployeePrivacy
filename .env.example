# =============================================================================
# EMPLOYEE PRIVACY SURVEY - ENVIRONMENT CONFIGURATION
# =============================================================================

# -----------------------------------------------------------------------------
# PRIVATE KEYS (NEVER COMMIT ACTUAL VALUES!)
# -----------------------------------------------------------------------------

# Wallet private key for deployment and transactions
# Get from MetaMask: Account Details â†’ Export Private Key
# WARNING: Keep this secret! Never commit to version control!
PRIVATE_KEY=your_private_key_without_0x_prefix

# Optional: Deployer private key (for production deployments)
DEPLOYER_PRIVATE_KEY=deployer_private_key_here

# Optional: Pauser private key (for emergency pause functionality)
PAUSER_PRIVATE_KEY=pauser_private_key_here

# -----------------------------------------------------------------------------
# NETWORK RPC ENDPOINTS
# -----------------------------------------------------------------------------

# Sepolia Testnet RPC URL
# Get free RPC from:
# - Infura: https://infura.io/ (recommended)
# - Alchemy: https://www.alchemy.com/
# - Public: https://rpc.sepolia.org/ (rate-limited)
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR-PROJECT-ID

# Zama fhEVM Devnet RPC URL
# Documentation: https://docs.zama.ai
ZAMA_RPC_URL=https://devnet.zama.ai

# Ethereum Mainnet RPC URL (for forking/production)
MAINNET_RPC_URL=https://mainnet.infura.io/v3/YOUR-PROJECT-ID

# Local network RPC (for development)
LOCAL_RPC_URL=http://127.0.0.1:8545

# -----------------------------------------------------------------------------
# API KEYS
# -----------------------------------------------------------------------------

# Etherscan API Key (for contract verification)
# Get from: https://etherscan.io/myapikey
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Infura Project ID (for RPC access)
# Get from: https://infura.io/dashboard
INFURA_PROJECT_ID=your_infura_project_id

# Alchemy API Key (alternative to Infura)
# Get from: https://dashboard.alchemy.com/
ALCHEMY_API_KEY=your_alchemy_api_key

# CoinMarketCap API Key (for gas price reporting in USD)
# Get from: https://coinmarketcap.com/api/
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key

# Codecov Token (for coverage reporting)
# Get from: https://codecov.io/
CODECOV_TOKEN=your_codecov_token_here

# -----------------------------------------------------------------------------
# CONTRACT CONFIGURATION
# -----------------------------------------------------------------------------

# Deployed contract address (update after deployment)
CONTRACT_ADDRESS=0x32db9e03494b45a0b2b2B85Cfb767CD65B49275A

# Contract owner address
OWNER_ADDRESS=your_owner_wallet_address

# Pauser role address (for emergency pause)
PAUSER_ADDRESS=your_pauser_wallet_address

# Admin addresses (comma-separated)
ADMIN_ADDRESSES=address1,address2,address3

# -----------------------------------------------------------------------------
# NETWORK SETTINGS
# -----------------------------------------------------------------------------

# Default network for deployment
NETWORK=sepolia

# Gas price (in gwei) - "auto" for automatic estimation
GAS_PRICE=auto

# Gas limit for transactions
GAS_LIMIT=8000000

# Number of block confirmations to wait
BLOCK_CONFIRMATIONS=2

# -----------------------------------------------------------------------------
# PERFORMANCE & OPTIMIZATION
# -----------------------------------------------------------------------------

# Enable/disable gas reporter
# Set to "true" to see gas usage in tests
REPORT_GAS=false

# Solidity optimizer runs (higher = more optimization)
# 200 = balanced, 800 = gas-optimized, 1 = deployment-optimized
OPTIMIZER_RUNS=800

# Enable Solidity coverage
SOLIDITY_COVERAGE=false

# Enable contract size reporting
CONTRACT_SIZE_REPORT=true

# -----------------------------------------------------------------------------
# SECURITY SETTINGS
# -----------------------------------------------------------------------------

# Enable security checks in CI/CD
SECURITY_CHECKS=true

# Require multi-sig for critical operations
MULTI_SIG_REQUIRED=false

# Time lock delay (in seconds) for admin actions
TIME_LOCK_DELAY=86400

# Maximum survey duration (in days)
MAX_SURVEY_DURATION=365

# Minimum survey duration (in days)
MIN_SURVEY_DURATION=1

# Rate limiting: Max surveys per address
MAX_SURVEYS_PER_ADDRESS=10

# Rate limiting: Max responses per address per survey
MAX_RESPONSES_PER_SURVEY=1

# -----------------------------------------------------------------------------
# DEVELOPMENT SETTINGS
# -----------------------------------------------------------------------------

# Node environment
NODE_ENV=development

# Debug mode (verbose logging)
DEBUG=false

# Auto-mine blocks in local network
AUTO_MINE=true

# Mining interval (ms) for local network
MINING_INTERVAL=0

# Test timeout (ms)
TEST_TIMEOUT=60000

# -----------------------------------------------------------------------------
# FRONTEND CONFIGURATION (if applicable)
# -----------------------------------------------------------------------------

# Frontend URL
FRONTEND_URL=http://localhost:3000

# API base URL
API_BASE_URL=http://localhost:8080

# Enable frontend analytics
ANALYTICS_ENABLED=false

# Google Analytics ID
GA_TRACKING_ID=UA-XXXXXXXXX-X

# -----------------------------------------------------------------------------
# PAUSER CONFIGURATION
# -----------------------------------------------------------------------------

# Pauser role configuration for emergency stops
PAUSER_SET_ENABLED=true

# Pauser whitelist (comma-separated addresses)
PAUSER_WHITELIST=0xAddress1,0xAddress2,0xAddress3

# Auto-pause conditions
AUTO_PAUSE_ON_ERROR=false
AUTO_PAUSE_THRESHOLD=100

# Pause notification endpoints
PAUSE_NOTIFICATION_WEBHOOK=https://your-webhook-url.com
PAUSE_NOTIFICATION_EMAIL=admin@your-domain.com

# -----------------------------------------------------------------------------
# MONITORING & LOGGING
# -----------------------------------------------------------------------------

# Log level (error, warn, info, debug, verbose)
LOG_LEVEL=info

# Log file path
LOG_FILE_PATH=./logs/app.log

# Enable performance monitoring
PERFORMANCE_MONITORING=true

# Sentry DSN (for error tracking)
SENTRY_DSN=your_sentry_dsn_here

# DataDog API Key (for monitoring)
DATADOG_API_KEY=your_datadog_api_key

# -----------------------------------------------------------------------------
# BACKUP & RECOVERY
# -----------------------------------------------------------------------------

# Backup private key (encrypted)
BACKUP_PRIVATE_KEY_ENCRYPTED=encrypted_backup_key

# Recovery address
RECOVERY_ADDRESS=your_recovery_address

# Backup frequency (in hours)
BACKUP_FREQUENCY=24

# -----------------------------------------------------------------------------
# NOTES
# -----------------------------------------------------------------------------
# 1. Copy this file to .env and fill in your actual values
# 2. NEVER commit .env file to version control
# 3. Keep backup of private keys in secure location
# 4. Rotate keys regularly for production
# 5. Use different keys for different environments
# 6. Enable multi-sig for production deployments
# 7. Monitor contract events for suspicious activity
#
# Setup Instructions:
# 1. cp .env.example .env
# 2. Edit .env with your values
# 3. Ensure .env is in .gitignore
# 4. Verify permissions: chmod 600 .env
# -----------------------------------------------------------------------------
